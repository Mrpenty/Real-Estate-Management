@{
    ViewData["Title"] = "Lỗi thanh toán";
}

<div class="container mx-auto px-6 py-8 text-center">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-3xl font-bold text-red-700 mb-4">⚠️ Lỗi trong quá trình thanh toán!</h2>
        <p class="text-gray-700 mb-6">Đã xảy ra lỗi trong quá trình xử lý giao dịch. Vui lòng thử lại hoặc liên hệ bộ phận hỗ trợ.</p>
        <p class="text-sm text-gray-500 mb-8" id="errorMessageDisplay"></p>
        <a href="/Deposit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200">
            Thử lại
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const detailed = urlParams.get('detailed');
            let displayMessage = message || "Không rõ nguyên nhân.";
            if (detailed) {
                displayMessage += ` (${detailed})`;
            }
            document.getElementById('errorMessageDisplay').textContent = displayMessage;
        });
    </script>
}