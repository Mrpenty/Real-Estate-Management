@{

    ViewBag.Title = "Chat";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="chat-container">

        <div class="conversation-list" id="conversationList">
@*             <div class="conversation-header">
                <a href="/" class="back-button">← Quay về trang chủ</a>
            </div> *@
            <div class="conversation-header" style="display: flex; justify-content: space-between; align-items: center; gap: 10px; margin-bottom: 10px;">
                <h1 class="text-xl font-bold" style="margin: 0;">
                    <span onclick="window.location.href='/'" class="text-blue-700" style="cursor: pointer;">RealEstate</span>
                </h1>
                <input type="text" id="conversationSearchInput" placeholder="Tìm kiếm..." style="flex-grow: 1; padding: 6px 10px; border-radius: 6px; border: 1px solid #ccc; font-size: 14px;" />
            </div>

            <!-- Các cuộc trò chuyện sẽ được render động vào đây -->
        </div>
        <div class="message-panel">
            <div id="messagesContainer">
                <p>Chọn một cuộc trò chuyện để bắt đầu.</p>
            </div>
            <div id="editBanner"
                 style="display: none; background-color: #cfe2ff; padding: 8px 12px; border-radius: 5px; margin-bottom: 5px; flex-direction: row; justify-content: space-between; align-items: center;">
                <span><strong>Chỉnh sửa tin nhắn</strong></span>
                <button id="cancelEditBtn"
                        style="background: transparent; border: none; font-size: 18px; cursor: pointer;">
                    ×
                </button>
            </div>

            <div id="sendMessageForm">
                <input type="text" id="messageInput" placeholder="Nhập tin nhắn..." />
                <button id="sendButton">Gửi</button>
            </div>
        </div>
    </div>
</body>
</html>


<link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/signalr.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>

}
