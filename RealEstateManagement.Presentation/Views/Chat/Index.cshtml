@{
    ViewBag.Title = "Chat";
}

<style>
    .chat-container {
        display: flex;
        height: 90vh;
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
        font-family: Arial, sans-serif;
    }

    .conversation-list {
        width: 30%;
        border-right: 1px solid #ddd;
        overflow-y: auto;
        padding: 10px;
        background-color: #f8f8f8;
    }

    .conversation-item {
        padding: 10px;
        margin-bottom: 5px;
        border-radius: 5px;
        cursor: pointer;
        background-color: #ffffff;
        border: 1px solid #ccc;
    }

        .conversation-item:hover {
            background-color: #e9ecef;
        }

    .message-panel {
        width: 70%;
        display: flex;
        flex-direction: column;
        padding: 10px;
        position: relative;
    }

    #messagesContainer {
        flex-grow: 1;
        overflow-y: auto;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        background-color: #fefefe;
    }

    .message {
        margin-bottom: 15px;
        background-color: #f2f2f2;
        padding: 10px;
        border-radius: 10px;
    }

    #sendMessageForm {
        display: flex;
        gap: 10px;
    }

    #messageInput {
        flex-grow: 1;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    #messagesContainer {
        display: flex;
        flex-direction: column;
    }
    button {
        padding: 8px 12px;
        border: none;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    .message.left {
        align-self: flex-start;
        background-color: #f1f1f1;
        text-align: left;
        border-radius: 10px 10px 10px 0;
    }

    .message.right {
        align-self: flex-end;
        background-color: #d1e7dd;
        text-align: right;
        border-radius: 10px 10px 0 10px;
    }

    .message strong {
        display: block;
        font-weight: bold;
    }

    .message small {
        display: block;
        font-size: 0.75em;
        color: #666;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>


<div class="chat-container">
    <div class="conversation-list" id="conversationList">
        <!-- Danh sách cuộc trò chuyện -->
    </div>
    <div class="message-panel">
        <div id="messagesContainer">
            <p>Chọn một cuộc trò chuyện để bắt đầu.</p>
        </div>
        <div id="sendMessageForm">
            <input type="text" id="messageInput" placeholder="Nhập tin nhắn..." />
            <button id="sendButton">Gửi</button>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}