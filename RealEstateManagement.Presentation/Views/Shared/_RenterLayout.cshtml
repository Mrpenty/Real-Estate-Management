<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>RealEstate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/authService.js" asp-append-version="true"></script>
    <script src="~/js/postPropertyService.js"></script>
    <script src="~/js/helper.js" asp-append-version="true"></script>
    <style>
        .icon {
            margin-top: 3px;
            margin-right: 5px;
        }

        .menu-bar li {
            margin-bottom: 8px !important;
        }

        a {
            text-decoration: none;
        }


            a:hover {
                text-decoration: none !important;
                color: rgb(249 115 22 / var(--tw-bg-opacity, 1)) !important;
            }
    </style>
</head>
<body class="bg-gray-100 font-sans">

    <header class="fixed z-999 top-0 left-0 right-0 z-50 bg-blue-800 text-white px-6 h-14 flex justify-between items-center">
        <div class="font-bold text-xl">
            RealEstate
        </div>
        <div class="flex items-center gap-4 text-white text-sm font-medium">
            <a href="/" class="bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600 flex items-center gap-1">
                <span>Về trang chủ</span>
            </a>
        </div>
    </header>

    <div class="flex">
        <aside style="padding-left:1rem !important;padding-right:1rem !important;" class="fixed top-14 left-0 h-[calc(100vh-3.5rem)] w-64 bg-white p-4 border-r overflow-y-auto">
            <div class="mb-4 flex">
                <div style="margin-right:15px" class="w-10 h-10 rounded-full bg-white text-blue-800 flex items-center justify-center"><img style="border-radius:10rem" src="https://phongtro123.com/images/default-user.svg" /></div>
                <div>
                    <h3 style="font-size:15px" class="font-bold nameCls" id="nameCls"></h3>
                    <p class="text-gray-600 text-sm">
                        <span id="phoneCls"></span><br>
                    </p>
                </div>
            </div>

            <div style="display:none" class="bg-yellow-100 border border-yellow-400 p-4 rounded mb-4 text-center">
                <p class="text-sm text-gray-700">Số dư tài khoản</p>
                <p class="text-xl font-semibold">0</p>
                <button style="margin:auto;color:black !important" class="mt-2 bg-yellow-400 text-white px-3 py-1 rounded hover:bg-yellow-500 flex items-center justify-center gap-1">
                    <i class="fas fa-wallet"></i> Nạp tiền
                </button>
            </div>

            <ul class="menu-bar space-y-2 text-sm">
                <li>
                    <a href="/Admin/CreatePost" id="CreatePostId" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-edit"></i> Đăng tin mới
                    </a>
                </li>
                <li>
                    <a href="/Admin/Index" id="ListPostId" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-folder-open"></i> Danh sách tin đăng
                    </a>
                </li>
                <li>
                    <a href="#" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-credit-card"></i> Nạp tiền vào tài khoản
                    </a>
                </li>
                <li>
                    <a href="#" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-clock"></i> Lịch sử nạp tiền
                    </a>
                </li>
                <li>
                    <a href="#" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-receipt"></i> Lịch sử thanh toán
                    </a>
                </li>
                <li>
                    <a href="#" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-tags"></i> Bảng giá dịch vụ
                    </a>
                </li>
                <li>
                    <a href="#" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-user-cog"></i> Quản lý tài khoản
                    </a>
                </li>
                <li>
                    <a href="#" onclick="handleLogout(event)" class="block no-underline flex items-center gap-2">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </aside>

        <main class="ml-64 mt-14 w-full">
            @RenderBody()
        </main>
    </div>

    <script>
            async function handleLogout(event) {
            event.preventDefault();
            await authService.logout();
            window.location.href = '/';
        }
    </script>
</body>
</html>
