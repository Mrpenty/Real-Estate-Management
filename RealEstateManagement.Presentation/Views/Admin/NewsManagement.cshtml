@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý bài báo";
}
<div class="container mx-auto py-8 px-4">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Quản lý bài báo</h1>
            <p class="text-gray-600">Danh sách và thao tác quản lý bài báo hệ thống</p>
        </div>
        <a href="/Admin/CreateOrEditNews" id="btnAddNews" class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-lg font-semibold flex items-center gap-2">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>
    <div class="bg-white rounded-lg shadow p-4 mb-6 flex flex-col md:flex-row md:items-center gap-4">
        <input id="searchTitle" type="text" class="border border-gray-300 rounded px-4 py-2 w-full md:w-1/3" placeholder="Tìm kiếm theo tiêu đề...">
        <button id="btnSearch" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Tìm kiếm</button>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-2 text-left font-semibold">ID</th>
                        <th class="px-4 py-2 text-left font-semibold">Tiêu đề</th>
                        <th class="px-4 py-2 text-left font-semibold">Trạng thái</th>
                        <th class="px-4 py-2 text-left font-semibold">Ngày tạo</th>
                        <th class="px-4 py-2 text-center font-semibold">Hành động</th>
                    </tr>
                </thead>
                <tbody id="newsTableBody">
                    <tr>
                        <td colspan="5" class="text-center py-8 text-gray-400">Đang tải dữ liệu...</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="flex justify-between items-center mt-4" id="paginationContainer">
            <!-- Pagination will be rendered here -->
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Admin/NewsManagement.js"></script>
} 