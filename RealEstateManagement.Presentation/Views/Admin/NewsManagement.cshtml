@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý bài báo";
}



<div class="container mx-auto py-8 px-4">
    <!-- Page Header -->
    <div class="page-header">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
            <div class="mb-4 md:mb-0">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Quản lý bài báo</h1>
                <p class="text-gray-600">Quản lý và theo dõi tất cả bài báo trong hệ thống</p>
            </div>
            <a href="/Admin/CreateOrEditNews" class="add-news-btn">
                <i class="fas fa-plus"></i>
                Tạo bài báo mới
            </a>
        </div>
        
        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div id="totalNews" class="stat-number">-</div>
                <div class="stat-label">Tổng bài báo</div>
            </div>
            <div class="stat-card">
                <div id="publishedNews" class="stat-number">-</div>
                <div class="stat-label">Đã xuất bản</div>
            </div>
            <div class="stat-card">
                <div id="draftNews" class="stat-number">-</div>
                <div class="stat-label">Bản nháp</div>
            </div>
        </div>
    </div>
    
    <!-- Search -->
    <div class="search-container">
        <h3 class="text-lg font-semibold mb-4">
            <i class="fas fa-search mr-2"></i>
            Tìm kiếm bài báo
        </h3>
        <div class="flex flex-col md:flex-row gap-4">
            <input 
                id="searchTitle" 
                type="text" 
                class="search-input flex-1" 
                placeholder="Nhập tiêu đề bài báo cần tìm..."
                autocomplete="off"
            >
            <button id="btnSearch" class="search-button">
                <i class="fas fa-search"></i>
                Tìm kiếm
            </button>
        </div>
    </div>
    
    <!-- Table -->
    <div class="table-container">
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead class="table-header">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">ID</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Tiêu đề</th>
                        <th class="px-6 py-4 text-center text-sm font-semibold text-gray-700">Trạng thái</th>
                        <th class="px-6 py-4 text-center text-sm font-semibold text-gray-700">Ngày tạo</th>
                        <th class="px-6 py-4 text-center text-sm font-semibold text-gray-700">Tác giả</th>
                        <th class="px-6 py-4 text-center text-sm font-semibold text-gray-700">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="newsTableBody">
                    <tr class="loading-state">
                        <td colspan="6" class="text-center py-12">
                            <div class="loading-spinner mx-auto"></div>
                            <p>Đang tải dữ liệu...</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <div id="paginationContainer" class="pagination-container" style="display: none;">
            <div class="pagination-info">
                Hiển thị <span id="showingFrom">1</span> - <span id="showingTo">10</span> trong tổng số <span id="totalItems">0</span> bài báo
            </div>
            <div id="paginationButtons" class="pagination-buttons">
                <!-- Pagination buttons will be rendered here -->
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Admin/NewsManagement.js"></script>
} 