                     length: url ? url.length : 0,
                     startsWithHttp: url ? url.startsWith('http') : false,
                     startsWithSlash: url ? url.startsWith('/') : false
                 });
                 
                 if (url && !url.startsWith('http') && !url.startsWith('//')) {
                     // Nếu URL không có protocol, thêm base URL của backend
                     if (url.startsWith('/')) {
                         imageUrl = backendBaseUrl + url;
                     } else {
                         imageUrl = backendBaseUrl + '/' + url;
                     }
                 }
                 
                 console.log('Original URL in refresh:', url);
                 console.log('Processed URL in refresh:', imageUrl);
                 
                 img.src = imageUrl;
                 img.className = "w-full h-32 object-cover rounded-md shadow";
                 
                 img.onerror = function() {
                     console.error('Failed to load image in refresh:', imageUrl);
